<h1>New User</h1>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label "Username*" %><br>
    For login. Displayed along with observations.<br>
    <%= form.text_field :username, required: true %><p>
  </div>

  <div>
    <%= form.label "Email*" %><br>
    <%= form.text_field :email, required: true %><p>
  </div>

  <div>
    <%= form.label :displayname %> <br>
    Displayed on your profile.<br>
    This is where your real name would go if you want to share it.<br>
    <%= form.text_field :displayname %><p>
  </div>

  <div>
    <%= form.label :bio %><br>
    <%= form.text_area :bio %><p>
  </div>

  <div>
    <%= form.label "Password*" %><br>
    <%= form.password_field :password, required: true %><p>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirmation*" %><br>
    <%= form.password_field :password_confirmation, required: true %><p>
  </div>

  <div>
    <%= form.submit "Create account" %>
  </div>
<% end %>

